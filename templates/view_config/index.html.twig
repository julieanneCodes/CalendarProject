{% extends 'base.html.twig' %}

{% block title %}ViewConfig index{% endblock %}

{% block body %}
    <h1>ViewConfig index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Panel_name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for view_config in view_configs %}
            <tr>
                <td>{{ view_config.id }}</td>
                <td>{{ view_config.panelName }}</td>
                <td>
                    <a href="{{ path('view_config_show', {'id': view_config.id}) }}">show</a>
                    <a href="{{ path('view_config_edit', {'id': view_config.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('view_config_new') }}">Create new</a>
{% endblock %}
