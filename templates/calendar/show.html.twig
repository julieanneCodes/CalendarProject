{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}
    <h1>Calendar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Event Name</th>
                <td>{{ calendar.eventname }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ calendar.time ? calendar.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ calendar.day ? calendar.day|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ calendar.notes }}</td>
        </tbody>
    </table>

    <a href="{{ path('calendar_index') }}">back to list</a>

    <a href="{{ path('calendar_edit', {'id': calendar.id}) }}">edit</a>

    {{ include('calendar/_delete_form.html.twig') }}
{% endblock %}
